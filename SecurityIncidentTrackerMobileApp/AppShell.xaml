<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SecurityIncidentTrackerMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SecurityIncidentTrackerMobileApp.Views" 
    xmlns:incidents="clr-namespace:SecurityIncidentTrackerMobileApp.Views.Incidents"
    xmlns:depts="clr-namespace:SecurityIncidentTrackerMobileApp.Views.Departments"
    xmlns:devices="clr-namespace:SecurityIncidentTrackerMobileApp.Views.Devices"
    xmlns:techs="clr-namespace:SecurityIncidentTrackerMobileApp.Views.Technicians"
    xmlns:types="clr-namespace:SecurityIncidentTrackerMobileApp.Views.IncidentTypes"
    Title="Security Tracker"
    
    Shell.FlyoutBehavior="Disabled"
    
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.ForegroundColor="{StaticResource White}"
    Shell.TitleColor="{StaticResource White}"
    Shell.TabBarBackgroundColor="{StaticResource PageBackgroundColor}"
    Shell.TabBarForegroundColor="{StaticResource Primary}"
    Shell.TabBarTitleColor="{StaticResource Primary}"
    Shell.TabBarUnselectedColor="{StaticResource Gray200}">
    
    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Incidents">
            <ShellContent 
                ContentTemplate="{DataTemplate incidents:IncidentPage}" 
                Route="Incidents" />
        </Tab>
        <Tab Title="Types">
            <ShellContent ContentTemplate="{DataTemplate types:IncidentTypePage}" />
        </Tab>
        <Tab Title="Technicians">
            <ShellContent ContentTemplate="{DataTemplate techs:TechnicianPage}" />
        </Tab>
        <Tab Title="Departments">
            <ShellContent ContentTemplate="{DataTemplate depts:DepartmentPage}" />
        </Tab>
        <Tab Title="Devices">
            <ShellContent ContentTemplate="{DataTemplate devices:DevicePage}" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>