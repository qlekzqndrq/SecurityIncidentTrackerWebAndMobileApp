<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="SecurityIncidentTrackerMobileApp.Views.ActionPopup"
               Color="Transparent">

    <Border BackgroundColor="#2b2b2b"
            StrokeThickness="0"
            WidthRequest="300"
            Padding="20">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5"/>
        </Border.StrokeShape>

        <VerticalStackLayout Spacing="20">
            <Label Text="Options"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="18"
                   HorizontalOptions="Start"
                   Margin="0,0,0,10"/>

            <Label Text="Edit"
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Start">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnEditClicked"/>
                </Label.GestureRecognizers>
            </Label>

            <Label x:Name="lblDetails"
                   Text="Details"
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Start"
                   IsVisible="False">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDetailsClicked"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="Delete"
                   TextColor="#ff6b6b"
                   FontSize="16"
                   HorizontalOptions="Start">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDeleteClicked"/>
                </Label.GestureRecognizers>
            </Label>

            <Label Text="Close"
                   TextColor="White"
                   FontSize="14"
                   HorizontalOptions="End"
                   Margin="0,10,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCancelClicked"/>
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>