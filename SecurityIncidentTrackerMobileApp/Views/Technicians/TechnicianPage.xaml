<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SecurityIncidentTrackerMobileApp.Views.Technicians.TechnicianPage"
             Title="Technicians">

    <Grid RowDefinitions="*, Auto" Padding="20" RowSpacing="10">
        <CollectionView x:Name="listView" Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="15" CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnItemTapped" NumberOfTapsRequired="1" />
                        </Frame.GestureRecognizers>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding FullName}" FontSize="16" FontAttributes="Bold"/>

                            <Label Text="{Binding Email, StringFormat='Email: {0}'}" FontSize="12"/>
                            <Label Text="{Binding Phone, StringFormat='Phone number: {0}'}" FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1" Text="ADD NEW TECHNICIAN" Clicked="OnAddClicked" TextColor="White" HeightRequest="45" CornerRadius="25"/>
    </Grid>
</ContentPage>