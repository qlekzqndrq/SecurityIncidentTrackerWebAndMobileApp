<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SecurityIncidentTrackerMobileApp.Views.Devices.DevicePage"
             Title="Devices">
    <Grid RowDefinitions="*, Auto" Padding="20" RowSpacing="10">
        <CollectionView x:Name="listView" Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="15" CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnItemTapped" NumberOfTapsRequired="1"/>
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout>
                            <Label Text="{Binding DeviceName}" FontSize="16" FontAttributes="Bold"/>
                            <Label Text="{Binding SerialNumber, StringFormat='Serial Number: {0}'}" FontSize="12"/>
							<Label Text="{Binding Department.DepartmentName, StringFormat='Assigned Department: {0}'}" FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="1" Text="ADD NEW DEVICE" Clicked="OnAddClicked" TextColor="White" HeightRequest="45" CornerRadius="25"/>
    </Grid>
</ContentPage>