<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecurityIncidentTrackerMobileApp.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="#121212">
    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
        <Label Text="Settings" 
               TextColor="White"
               FontSize="30" 
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               Margin="0,0,0,50"/>

        <Label Text="Account Settings" 
               TextColor="White"
               FontSize="18" 
               FontAttributes="Bold"
               Margin="0,0,0,10"/>

        <Button Text="LOGOUT" 
                Clicked="OnLogoutClicked" 
                BackgroundColor="#B71C1C" 
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="45"/>
    </VerticalStackLayout>
</ContentPage>