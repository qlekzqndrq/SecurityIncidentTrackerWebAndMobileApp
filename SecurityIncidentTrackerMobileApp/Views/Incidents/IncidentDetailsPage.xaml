<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecurityIncidentTrackerMobileApp.Views.Incidents.IncidentDetailsPage"
             Title="Details"
             BackgroundColor="black">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="25">

            <VerticalStackLayout Spacing="5">
                <Label Text="Description" 
                       FontSize="14" 
                       FontAttributes="Bold" 
                       TextColor="#991b1b"/>
                <Border Stroke="black"
                        BackgroundColor="Transparent" 
                        Padding="0,0,0,8">
                    <Label x:Name="lblDescriere" FontSize="16" TextColor="White"/>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Incident Type" FontSize="14" FontAttributes="Bold" TextColor="#991b1b"/>
                <Border Stroke="black" BackgroundColor="Transparent" Padding="0,0,0,8">
                    <Label x:Name="lblTip" FontSize="16" TextColor="White"/>
                </Border>
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Date" FontSize="14" FontAttributes="Bold" TextColor="#991b1b"/>
                    <Border Stroke="black" BackgroundColor="Transparent" Padding="0,0,0,8">
                        <Label x:Name="lblData" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="Status" FontSize="14" FontAttributes="Bold" TextColor="#991b1b"/>
                    <Border Stroke="black" BackgroundColor="Transparent" Padding="0,0,0,8">
                        <Label x:Name="lblStatus" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                    </Border>
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout Spacing="5">
                <Label Text="Technician" FontSize="14" FontAttributes="Bold" TextColor="#991b1b"/>
                <Border Stroke="black" BackgroundColor="Transparent" Padding="0,0,0,8">
                    <Label x:Name="lblTehnician" FontSize="16" TextColor="White"/>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Department" FontSize="14" FontAttributes="Bold" TextColor="#991b1b"/>
                <Border Stroke="black" BackgroundColor="Transparent" Padding="0,0,0,8">
                    <Label x:Name="lblDepartment" FontSize="16" TextColor="White"/>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="5">
                <Label Text="Device" FontSize="14" FontAttributes="Bold" TextColor="#991b1b"/>
                <Border Stroke="black" BackgroundColor="Transparent" Padding="0,0,0,8">
                    <Label x:Name="lblDevice" FontSize="16" TextColor="White"/>
                </Border>
            </VerticalStackLayout>

            <Button Text="Back to List" 
                    Clicked="OnCloseClicked" 
                    BackgroundColor="#7f1d1d"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="0,30,0,0" 
                    HeightRequest="40"
                    FontAttributes="Bold"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>