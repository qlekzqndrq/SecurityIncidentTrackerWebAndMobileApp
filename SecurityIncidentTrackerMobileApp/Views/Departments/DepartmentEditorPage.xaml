<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SecurityIncidentTrackerMobileApp.Views.Departments.DepartmentEditorPage"
             Title="Departments"
             BackgroundColor="#121212">
    <VerticalStackLayout Spacing="15" Padding="20">
        <Label Text="Department Name" FontAttributes="Bold" TextColor="White"/>
        <Border StrokeShape="RoundRectangle 10"
               StrokeThickness="0"
               BackgroundColor="#212121"
               HeightRequest="50"
               Padding="15,0">
            <Entry x:Name="entName" 
                   Placeholder="Ex: HR, IT, Sales"
                   PlaceholderColor="Gray"
                   TextColor="White"
                   BackgroundColor="Transparent"/>
        </Border>
        <Label Text="Assigned Technicians" FontAttributes="Bold" TextColor="White" Margin="0,10,0,0"/>
        <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="#444444" BackgroundColor="#212121" HeightRequest="200" Padding="10">
            <CollectionView x:Name="TechniciansSelectionList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*, Auto" Padding="5">
                            <Label Text="{Binding FullName}" TextColor="White" VerticalOptions="Center"/>
                            <CheckBox IsChecked="{Binding IsSelected}" Color="#B71C1C"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>
        <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
            <Button Text="SAVE" Clicked="OnSaveClicked" Grid.Column="0" BackgroundColor="#7f1d1d" TextColor="White" HeightRequest="45" CornerRadius="8"/>
            <Button Text="CLOSE" Clicked="OnCancelClicked" Grid.Column="1" BackgroundColor="Gray" TextColor="White" HeightRequest="45" CornerRadius="8"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>