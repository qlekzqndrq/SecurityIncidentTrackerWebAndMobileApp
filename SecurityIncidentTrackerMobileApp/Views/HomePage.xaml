<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecurityIncidentTrackerMobileApp.Views.HomePage"
             Title="Security Incident Tracker"
             BackgroundColor="#1a1a1a">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Hero Section -->
            <Frame BackgroundColor="#991b1b"
                   CornerRadius="20"
                   HasShadow="True"
                   BorderColor="Transparent"
                   Padding="40,50"
                   Margin="0,10,0,20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Security Incident Tracker"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center" />

                    <Label Text="Manage security incidents quickly and efficiently"
                           FontSize="16"
                           TextColor="#e0e0e0"
                           HorizontalTextAlignment="Center" />

                    <Frame BackgroundColor="#33dc2626"
                           CornerRadius="20"
                           Padding="10,8"
                           HasShadow="False"
                           BorderColor="#dc2626"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0">
                        <Label Text="Professional Monitoring System"
                               TextColor="#ef4444"
                               FontSize="12"
                               FontAttributes="Bold" />
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Cards -->
            <!-- Report Incident Card -->
            <Frame BackgroundColor="#2a2a2a"
                   CornerRadius="16"
                   HasShadow="True"
                   Padding="25"
                   BorderColor="Transparent"
                   Margin="0,10">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnReportIncidentTapped" />
                </Frame.GestureRecognizers>

                <VerticalStackLayout Spacing="15">
                    <!-- Icon -->
                    <Frame BackgroundColor="#dc2626"
                           CornerRadius="16"
                           WidthRequest="70"
                           HeightRequest="70"
                           HasShadow="True"
                           Padding="0"
                           HorizontalOptions="Center"
                           BorderColor="Transparent">
                        <Frame BackgroundColor="Transparent"
                               CornerRadius="12"
                               BorderColor="#66FFFFFF"
                               Margin="8"
                               Padding="0" />
                    </Frame>

                    <Label Text="Report Incident"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center" />

                    <Label Text="Found a security issue? Report the incident immediately to protect the system."
                           FontSize="14"
                           TextColor="#b0b0b0"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap" />

                    <Button Text="New Incident"
                            Clicked="OnReportIncidentTapped"
                            BackgroundColor="#dc2626"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50"
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Frame>

            <!-- Incident List Card -->
            <Frame BackgroundColor="#2a2a2a"
                   CornerRadius="16"
                   HasShadow="True"
                   Padding="25"
                   BorderColor="Transparent"
                   Margin="0,10">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnIncidentListTapped" />
                </Frame.GestureRecognizers>

                <VerticalStackLayout Spacing="15">
                    <!-- Icon -->
                    <Frame BackgroundColor="#dc2626"
                           CornerRadius="16"
                           WidthRequest="70"
                           HeightRequest="70"
                           HasShadow="True"
                           Padding="0"
                           HorizontalOptions="Center"
                           BorderColor="Transparent">
                        <Frame BackgroundColor="Transparent"
                               CornerRadius="12"
                               BorderColor="#66FFFFFF"
                               Margin="8"
                               Padding="0" />
                    </Frame>

                    <Label Text="Incident List"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center" />

                    <Label Text="View incident history, track progress, or update status."
                           FontSize="14"
                           TextColor="#b0b0b0"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap" />

                    <Frame BackgroundColor="Transparent"
                           BorderColor="#dc2626"
                           CornerRadius="12"
                           Padding="15,12"
                           HasShadow="False"
                           Margin="0,10,0,0">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnIncidentListTapped" />
                        </Frame.GestureRecognizers>
                        <Label Text="View All Incidents"
                               TextColor="#ef4444"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center" />
                    </Frame>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>