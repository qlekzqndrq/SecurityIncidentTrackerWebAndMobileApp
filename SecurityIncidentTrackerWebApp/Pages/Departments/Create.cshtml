@page
@model SecurityIncidentTrackerWebApp.Pages.Departments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department.DepartmentName" class="control-label"></label>
                <input asp-for="Department.DepartmentName" class="form-control" />
                <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label"><strong>Assign Technicians:</strong></label>
                <div class="mt-2">
                    @foreach (var tech in (List<SecurityIncidentTrackerWebApp.Models.Technician>)ViewData["AllTechnicians"])
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="SelectedTechnicians"
                                   value="@tech.ID"
                                   id="tech_@tech.ID">

                            <label class="form-check-label" for="tech_@tech.ID">
                                @tech.FullName
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
